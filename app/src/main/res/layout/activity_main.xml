<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00B9D5"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textIdade"
        android:layout_width="299dp"
        android:layout_height="57dp"
        android:layout_alignTop="@+id/imgDog"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="@android:dimen/app_icon_size"
        android:layout_marginStart="59dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="534dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginBottom="8dp"
        android:text="  "
        android:textColor="#D81B60"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/imgDog"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:contentDescription="Cachorro"
        android:hapticFeedbackEnabled="false"
        app:srcCompat="@drawable/cachorro"
        tools:srcCompat="@drawable/cachorro"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textDescricao"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgDog"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#4FC4D6"
        android:text="digite a idade de seu doggo, para descobrir a idade dele em anos humanos. "
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:typeface="normal"
        app:fontFamily="sans-serif-smallcaps" />

    <EditText
        android:id="@+id/campoIdadeDog"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/textDescricao"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="160dp"
        android:layout_marginStart="159dp"
        android:layout_marginLeft="159dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="151dp"
        android:layout_marginRight="151dp"
        android:autofillHints=""
        android:background="#4FC4D6"
        android:ems="5"
        android:inputType="number"
        android:text=""
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/campoIdadeDog"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="160dp"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:onClick="proximaTela"
        android:text="DESCOBRIR"
        android:textSize="22sp" />

</RelativeLayout>